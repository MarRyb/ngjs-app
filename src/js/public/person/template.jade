table(class="table table-striped")
  thead(class="thead-dark")
    tr(class="table_tr")
      th {{'Action'}}
      th {{'CARD'}}
      th {{'LASTNAME'}}
      th {{'FIRSTNAME'}}
      th {{'PATRONYMIC'}}
      th {{'IDPERSON'}}
      th {{'STATUSNAME'}}
      th {{'ACC1NUM'}}
      th {{'CARDTEMPLNAME'}}
      th {{'ORGNAMESHORT'}}
