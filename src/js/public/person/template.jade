      td {{item.CARD}}
      td {{item.LASTNAME}}
      td {{item.FIRSTNAME}}
      td {{item.PATRONYMIC}}
      td {{item.IDPERSON}}
      td {{item.STATUSNAME}}
      td {{item.ACC1NUM}}
      td {{item.CARDTEMPLNAME}}
      td {{item.ORGNAMESHORT}}
      td {{item.PERSONTYPENAME}}
      td {{item.CURRNAME}}
      td {{item.IDCARD}}
      td {{item.BIRTHDATE}}
      td {{item.DOCSERIES}}
      td {{item.DOCNUM}}
      td {{item.IDTASKAUTHSTATUS}}
      td {{item.DOCTYPENAME}}



